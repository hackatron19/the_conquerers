<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24212C"
    tools:context=".generateqr">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgqrgenerate"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="146dp"
            android:layout_marginEnd="81dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editvalue"
            android:layout_width="21dp"
            android:layout_height="50dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="195dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btngenerateqr" />

        <Button
            android:id="@+id/btngenerateqr"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_marginStart="105dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="106dp"
            android:background="@drawable/generate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgqrgenerate" />

     <!--   <TextView
            android:id="@+id/test"
